<p id="notice"><%= notice %></p>

<div class="login_container">
  <div class="login_path">
  <div>
    <p>
      <strong>Name:</strong>
      <%= @user.email %>
    </p>
    <p>
      <strong>Followers:</strong>
      <%= @user.followers.length %>
       <strong>Following:</strong>
      <%= @user.followees.length %>
      <% if current_user != @user %>
        <% if current_user.followees.include?(@user) %>   
          <h5><%= button_to "UnFollow #{@user.name}", unfollow_user_path, method: "POST" %></h5>
        <% else %>   
          <h5><%= button_to "Follow #{@user.name}", follow_user_path, method: "POST"  %></h5>
        <% end %>
      <% end %>
    </p>
  </div>

  <p>
    <strong>Location:</strong>
    <%= @user.location %>
  </p>

  <% if current_user.id == @user.id %>
      <strong>Coins:<strong>
      <%= current_user.coins%>
      <br>
      <strong><%= link_to 'Edit', edit_user_path(@user) %><strong>
  <% end %>
  <%= link_to 'Back', albums_path %>
  </div>
</div>
